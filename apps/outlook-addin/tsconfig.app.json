{
    "extends": "./tsconfig.json",
    "compilerOptions": {
        "outDir": "../../dist/out-tsc",
        "types": ["office-js"],
        "experimentalDecorators": true,
        "noEmitOnError": true,
        "sourceMap": true,
        "module": "commonjs",
        "target": "ES2022",
        "useDefineForClassFields": false
    },
    "ts-node": {
        "files": true
    },
    "types": ["office-js"],
    "files": ["src/main.ts", "src/polyfills.ts"],
    "exclude": ["jest.config.ts"]
}
